{
  "name": "sigaa-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for SIGAA",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:docs": "typedoc",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "tsc --noEmit && biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "sigaa",
    "sdk",
    "typescript"
  ],
  "author": "",
  "license": "GPL-3.0",
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@shipgirl/typedoc-plugin-versions": "^0.3.2",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
